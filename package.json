{
  "name": "co",
  "module": "bootstrap.js",
  "scripts": {
    "dev": "node ./bootstrap.js",
    "start": "node ./bootstrap.js",
    "build": "rm -rf ./dist && rm -f ./co && pkg . --out-path dist && cp ./dist/co-linux-x64 ./co",
    "linux-install-ldid": "cd /bin && wget https://github.com/ProcursusTeam/ldid/releases/download/v2.1.5-procursus7/ldid_linux_x86_64 && mv /bin/ldid_linux_x86_64 /bin/ldid && chmod +x /bin/ldid"
  },
  "bin": "./bootstrap.js",
  "pkg": {
    "scripts": "./bootstrap.js",
    "assets": [
      "./node_modules/**/*",
      "./src/**/*",
      "./bootstrap.js",
      "./package.json",
      "./package-lock.json",
      "./tsconfig.json",
      "package.json"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-linux-arm64",
      "node18-macos-x64",
      "node18-macos-arm64",
      "node18-win-x64"
    ],
    "outputPath": "dist"
  },
  "peerDependencies": {
    "typescript": "^5.2.0"
  },
  "dependencies": {
    "@types/ejs": "^3.1.3",
    "@types/shelljs": "^0.8.13",
    "ansi-colors": "^4.1.3",
    "ejs": "^3.1.9",
    "enquirer": "^2.4.1",
    "jiti": "^1.20.0",
    "pkg": "^5.8.1",
    "shelljs": "^0.8.5",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "lodash": "^4.17.21"
  }
}
